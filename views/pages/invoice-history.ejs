<%- include('../partials/header', { title: 'Riwayat Invoice', isAdmin }) %>
<h2>Riwayat Invoice</h2>
<table>
  <thead>
    <tr>
      <th>No</th><th>Invoice</th><th>Perusahaan</th><th>Tujuan</th><th>Tanggal</th><th>Status</th><th>Aksi</th>
    </tr>
  </thead>
  <tbody>
    <% invoices.forEach((inv, i) => { %>
    <tr>
      <td><%= i + 1 %></td>
      <td><%= inv.invoice_number %></td>
      <td><%= inv.company_name %></td>
      <td><%= inv.recipient_name %></td>
      <td><%= inv.invoice_date %></td>
      <td><%= inv.status %></td>
      <td>
        <a href="/invoice/<%= inv.id %>">Lihat</a>
        <% if (isAdmin) { %>
        <a href="#" onclick="editStatus('<%= inv.id %>')">Status</a>
        <a href="#" onclick="editInvoice('<%= inv.id %>')">Edit</a>
        <a href="#" onclick="deleteInvoice('<%= inv.id %>')">Hapus</a>
        <% } %>
      </td>
    </tr>
    <% }); %>
  </tbody>
</table>
<script src="/js/history.js"></script>
<%- include('../partials/footer') %>